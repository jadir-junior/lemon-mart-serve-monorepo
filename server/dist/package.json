{
    "name": "server",
    "version": "1.0.0",
    "description": "Easy to learn and use full-stack Typescript with Mongo, Express, Angular and Node",
    "main": "index.js",
    "scripts": {
        "prestart": "npm run build",
        "start": "env-cmd node dist/src/index.js",
        "prebuild": "rimraf dist",
        "build": "tsc -p tsconfig.src.json",
        "copy:assets": "copyfiles -E -u 1 \"./src/public/**/*\" \"./dist/\"",
        "postbuild": "npm run copy:assets",
        "prepare": "npm run build",
        "init:env": "init-dev-env generate-dot-env example.env -f"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.21",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "copyfiles": "^2.4.1",
        "env-cmd": "^10.1.0",
        "init-dev-env": "^1.0.0",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "document-ts": "^4.6.3",
        "express": "^4.17.3",
        "morgan": "^1.10.0",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.3.0"
    }
}
